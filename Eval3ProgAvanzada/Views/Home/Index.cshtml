@{
    ViewData["Title"] = "Inicio";
}

<!-- Estilos adicionales para mejorar la estética -->
<style>
    /* Estilo de la barra de navegación */
    .navbar-custom {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 0;
        padding-top: 15px;
        padding-bottom: 15px;
    }

        .navbar-custom a {
            color: white;
            text-decoration: none;
            padding: 0 15px;
        }

            .navbar-custom a:hover {
                text-decoration: underline;
            }

    /* Estilo de la barra lateral */
    .sidebar {
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        /* Asegurar bordes completos para el contenido de herramientas */
        .sidebar .content-box {
            background-color: #ffffff;
            border: 2px solid #007bff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    /* Estilo para el contenedor de contenido principal */
    .content-box {
        background-color: #ffffff;
        border: 2px solid #007bff; /* Asegura que el borde azul esté presente */
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 0;
    }

    /* Estilo para el logo */
    .logo-box {
        background-color: #ffffff;
        border: 2px solid #007bff;
        border-radius: 8px;
        padding: 10px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Ajustes generales de tipografía */
    h5, h6 {
        font-family: 'Arial', sans-serif;
    }

    .content-title {
        font-size: 24px;
        color: #007bff;
        font-weight: bold;
    }
</style>

<div class="container-fluid">
    <div class="row align-items-center">
        <!-- Sección del Logo -->
        <div class="col-md-2 p-2">
            <div class="logo-box mb-2">
                <img src="~/images/logo.png" alt="Logo" class="img-fluid" style="max-width: 100px;">
            </div>
        </div>

        <!-- Sección del Menú de Navegación -->
        <div class="col-md-10 p-2">
            <div class="navbar-custom text-center">
                <a asp-action="Index">Inicio</a>
                <a asp-controller="usuarios" asp-action="Index">Gestión de Usuarios</a>
                <a asp-controller="asignacions" asp-action="Index">Asignaciones</a>
                <a asp-controller="Herramientas" asp-action="Index">Gestión de Herramientas</a>
                <a asp-controller="modeloes" asp-action="Index">Modelos</a>
                <a asp-controller="marcas" asp-action="Index">Marcas</a>
 
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Barra lateral con información de herramientas -->
        <div class="col-md-2 sidebar">
            <div class="content-box mb-2">
                <h6>TOTAL DE HERRAMIENTAS</h6>
                <ul class="list-unstyled">
                    <li>- DISPONIBLES</li>
                    <li>- EN USO</li>
                    <li>- EN MANTENCIÓN</li>
                </ul>
            </div>
            <div class="content-box text-center">
                <img src="https://via.placeholder.com/100" alt="Gráfico" class="img-fluid" style="border-radius: 8px;">
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-10 p-2">
            <div class="content-box">
                <h5 class="content-title">Contenido Principal</h5>
                <!-- Aquí puedes agregar el contenido principal de la página -->
            </div>
        </div>
    </div>
</div>
