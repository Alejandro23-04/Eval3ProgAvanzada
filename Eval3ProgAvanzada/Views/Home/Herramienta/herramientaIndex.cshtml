@model IEnumerable<Eval3ProgAvanzada.Models.Herramienta>
@{
    ViewData["Title"] = "Gestión de Herramientas";
}

<!-- Estilos adicionales para mejorar la estética -->
<style>
    /* Estilo para el título de la página */
    .page-title {
        font-size: 24px;
        color: #ff3333;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Barra de búsqueda y botón de agregar herramienta */
    .search-bar {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .search-bar input[type="text"] {
        width: 70%;
        padding: 8px;
        border: 2px solid #333;
        border-radius: 4px;
    }

    .search-bar button {
        background-color: #333;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .search-bar button:hover {
        background-color: #555;
    }

    /* Tabla de herramientas */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
    }

    /* Estilo para las acciones */
    .actions {
        display: flex;
        gap: 10px;
    }

    .actions a {
        color: #007bff;
        text-decoration: none;
    }

    .actions a:hover {
        color: #0056b3;
    }

    /* Iconos de acciones */
    .icon {
        font-size: 18px;
        margin-right: 5px;
        cursor: pointer;
    }

    .icon-assign { color: #28a745; } /* Asignar a usuario */
    .icon-maintenance { color: #ffc107; } /* Enviar a mantención */
    .icon-edit { color: #007bff; } /* Editar */
</style>

<div class="page-title">Gestión de Herramientas</div>

<!-- Barra de búsqueda y botón para agregar herramienta -->
<div class="search-bar">
    <input type="text" placeholder="Ingrese número de serie o nombre">
    <button onclick="location.href='@Url.Action("Create", "herramienta")'">Agregar Herramienta</button>
</div>

<!-- Tabla de herramientas -->
<table class="table">
    <thead>
        <tr>
            <th>Nro Serie</th>
            <th>Modelo</th>
            <th>Marca</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var herramienta in Model)
        {
            <tr>
                <td>@herramienta.NumeroSerie</td>
                <td>@herramienta.Modelo.Nombre</td>
                <td>@herramienta.Marca</td>
                <td>@herramienta.Estado</td>
                <td class="actions">
                    <!-- Iconos de acciones -->
                    <a href="@Url.Action("Assign", "Herramienta", new { id = herramienta.Id })">
                        <span class="icon icon-assign">👤</span> <!-- Asignar a Usuario -->
                    </a>
                    <a href="@Url.Action("SendToMaintenance", "Herramienta", new { id = herramienta.Id })">
                        <span class="icon icon-maintenance">🛠️</span> <!-- Enviar a Mantenimiento -->
                    </a>
                    <a href="@Url.Action("Edit", "Herramienta", new { id = herramienta.Id })">
                        <span class="icon icon-edit">✏️</span> <!-- Editar -->
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
