@model Eval3ProgAvanzada.Models.usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2 class="text-center" style="color: #dc3545; font-weight: bold; margin-top: 20px;">Eliminar Usuario</h2>
<hr style="border: 1px solid #dc3545;">

<div class="container mt-4" style="border: 1px solid #dc3545; padding: 20px; border-radius: 10px; background-color: #f9f9f9; max-width: 600px;">
    <h4 class="text-center text-danger mb-4">¿Estás seguro de que deseas eliminar este usuario?</h4>

    <dl class="row">
        <dt class="col-sm-4" style="font-weight: bold; color: #333;">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #333;">@Html.DisplayNameFor(model => model.Rol)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Rol)</dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #333;">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-4" style="font-weight: bold; color: #333;">@Html.DisplayNameFor(model => model.MaxHerramientasEnUso)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaxHerramientasEnUso)</dd>
    </dl>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" style="padding: 10px 20px; font-weight: bold;" />
        <a asp-action="Index" class="btn btn-link" style="color: #007bff; font-weight: bold;">Volver a la lista</a>
    </form>
</div>
