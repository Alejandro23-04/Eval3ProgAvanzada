@model Eval3ProgAvanzada.Models.usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2 class="text-center" style="color: #007bff; font-weight: bold; margin-top: 20px;">Crear Usuario</h2>
<hr style="border: 1px solid #007bff;">

<div class="container mt-4" style="border: 1px solid #007bff; padding: 20px; border-radius: 10px; background-color: #f9f9f9; max-width: 600px;">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-4">
            <label asp-for="Nombre" class="form-label" style="font-weight: bold;"></label>
            <input asp-for="Nombre" class="form-control" style="border: 1px solid #007bff;" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Rol" class="form-label" style="font-weight: bold;"></label>
            <input asp-for="Rol" class="form-control" style="border: 1px solid #007bff;" />
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="form-label" style="font-weight: bold;"></label>
            <input asp-for="Email" class="form-control" style="border: 1px solid #007bff;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="MaxHerramientasEnUso" class="form-label" style="font-weight: bold;"></label>
            <input asp-for="MaxHerramientasEnUso" class="form-control" style="border: 1px solid #007bff;" />
            <span asp-validation-for="MaxHerramientasEnUso" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Crear" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; padding: 10px 20px; font-weight: bold;" />
        </div>
    </form>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-link" style="color: #007bff; font-weight: bold;">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
