@model Eval3ProgAvanzada.Models.asignacion

@{
    ViewData["Title"] = "Editar Asignación";
}

<h2 class="text-center" style="color: #007bff; font-weight: bold; margin-top: 20px;">Editar Asignación</h2>
<hr style="border: 1px solid #007bff;">

<div class="container mt-4" style="border: 1px solid #007bff; padding: 20px; border-radius: 10px; background-color: #f9f9f9; max-width: 600px;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-4">
            <label asp-for="herramientaId" class="form-label" style="font-weight: bold;">Herramienta</label>
            <select asp-for="herramientaId" class="form-control" asp-items="ViewBag.herramientaId" style="border: 1px solid #007bff;"></select>
            <span asp-validation-for="herramientaId" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="usuarioId" class="form-label" style="font-weight: bold;">Correo Usuario</label>
            <select asp-for="usuarioId" class="form-control" asp-items="ViewBag.usuarioId" style="border: 1px solid #007bff;"></select>
            <span asp-validation-for="usuarioId" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="FechaAsignacion" class="form-label" style="font-weight: bold;"></label>
            <input asp-for="FechaAsignacion" class="form-control" style="border: 1px solid #007bff;" />
            <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="FechaDevolucion" class="form-label" style="font-weight: bold;"></label>
            <input asp-for="FechaDevolucion" class="form-control" style="border: 1px solid #007bff;" />
            <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; padding: 10px 20px; font-weight: bold;" />
        </div>
    </form>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-link" style="color: #007bff; font-weight: bold;">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
